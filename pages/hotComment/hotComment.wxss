/**invoiceList.wxss**/
.container{
  background-color: #f2f2f2;
}
.section-head{
  padding: 45rpx 35rpx;
  background-color: #dd3535;
  color: #fff;
  font-size: 30rpx;
  position: relative;
  margin-bottom: 0;
}
.head-name{
  font-size: 40rpx;
  padding-bottom: 20rpx;
  width: 82%;
}
.head-address{
  width: 82%;
}
.head-tel{
  position: absolute;
  top: 45rpx;
  right: 35rpx;
}
.tel-icon{
  width: 88rpx;
  height: 88rpx;
  display: block;
}
.top-menu{
  white-space: nowrap;
  height: 80rpx;
  border-bottom: 1px solid #ddd;
}
.top-menu-item{
  padding: 0 10rpx;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-block;
  box-sizing: border-box;
}
.top-menu-item-active{
  color: #ffae00;
  border-bottom: 1px solid #ffae00;
}
.section-tab-content{
  background: none;
  display: none;
}
.tab-content-active{
  display: block;
}
.tab-content{
  font-size: 28rpx;
  color: #999;
  background-color: #fff;
  margin-bottom: 30rpx;
}
.tab-content-head{
  height: 90rpx;
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items:center;
  -moz-align-items:center;
  align-items:center;
  -webkit-justify-content:space-between;
  -moz-justify-content:space-between;
  justify-content: space-between;
  padding: 0 35rpx;
  border-bottom: 1px solid #ddd;
  box-sizing: border-box;
}
.head-title{
  font-size: 32rpx;
  color: #333;
}
.head-user{
  font-size: 28rpx;
}
.tab-content-info{
  padding: 35rpx;
}
.info-text{
  padding-bottom: 22rpx;
}
.info-date{
  padding-top: 15rpx;
}
.info-images-wrap{
  display: flex;
  flex-wrap: wrap;
}
.images-image{
  width: 210rpx;
  height: 210rpx;
  border-radius: 4px;
  margin: 0 15rpx 15rpx 0;
  background-color: #eee;
}
