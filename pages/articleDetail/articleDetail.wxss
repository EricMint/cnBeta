/**detail.wxss**/
.container{
  background-color: #f8f8f8;
}
.section{
  margin-bottom: 0;
}
.section-wrap{
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
}
.section-left-menu{
  background: none;
  width: 160rpx;
  color: #999;
  position: relative;
}
.left-menu{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 3;
  width: 160rpx;
}
.left-menu-item{
  height: 150rpx;
  line-height: 150rpx;
  font-size: 28rpx;
  text-align: center;
  border-bottom: 1px solid #ddd;
  margin: 0 20rpx;
  box-sizing: border-box;
}
.left-menu-item-active{
  color: #ffae00;
  background-color: #fff;
  margin: 0;
  padding: 0 20rpx;
  border-left: 2px solid #ffae00;
}
.section-tab-content{
  display: none;
  border-left: 1px solid #ddd;
  -webkit-flex: 1;
  -moz-flex: 1;
  flex: 1;
}
.tab-content-active{
  display: block;
}
.tab-content-head{
  padding: 30rpx;
  font-size: 28rpx;
  color: #333;
}
.date-plan{
  padding-bottom: 20rpx;
}
.text-orange{
  color: #ffae00;
}
.head-button,
.head-link{
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items:center;
  -moz-align-items:center;
  align-items:center;
  -webkit-justify-content:space-between;
  -moz-justify-content:space-between;
  justify-content: space-between;
  padding-top: 30rpx;
}
.head-link{
  -webkit-justify-content:space-around;
  -moz-justify-content:space-around;
  justify-content: space-around;
  padding-top: 30rpx;
}
.link{
  color: #999;
}
.link-icon{
  display: inline-block;
  width: 34rpx;
  height: 34rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.link-text{
  vertical-align: middle;
}
.button{
  display: inline-block;
  border-radius: 4px;
  background-color: #c2c2c2;
  height: 65rpx;
  line-height: 65rpx;
  width: 250rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}
.button-green{
  background-color: #21b9bb;
}
.button-orange{
  background-color: #f7a54a;
}
.main-title{
  padding: 25rpx 30rpx;
  color: #ffae00;
  font-size: 34rpx;
  background-color: #f8f8f8;
}
.main-content-top{
  padding: 30rpx 30rpx 20rpx 0;
  margin-left: 30rpx;
  color: #333;
  font-size: 34rpx;
  border-bottom: 1px dashed #ddd;
}
.info-text{
  padding: 30rpx 50rpx;
}
.info-text-section{
  display: block;
  font-size: 28rpx;
  color: #999;
  padding-bottom: 10rpx;
  line-height: 1.5;
}
.info-tip{
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items:center;
  -moz-align-items:center;
  align-items:center;
  -webkit-justify-content:space-between;
  -moz-justify-content:space-between;
  justify-content: space-between;
  height: 94rpx;
  color: #ffae00;
  font-size: 25rpx;
  padding-right: 30rpx;
  margin-left: 30rpx;
  border-top: 1px dashed #ddd;
}
.tip-date{
  margin-right: 40rpx;
}
.tip-btn{
  color: #fff;
  background-color: #ffae00;
  font-size: 25rpx;
  width: 170rpx;
  height: 58rpx;
  line-height: 58rpx;
  border-radius: 4px;
  text-align: center;
}
.split-line{
  height: 1px;
  width: 100%;
  background-color: #f8f8f8;
}
.images-list{
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx 30rpx
}
.images-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 4px;
  margin: 0 20rpx 20rpx 0;
  background-color: #eee;
}
