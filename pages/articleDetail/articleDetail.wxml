<!--projectDetail.wxml-->
<view class="page">
    <view class="page__hd">
        <view class="page__title">{{articleInfo.title}}</view>
        <text class="page__desc">{{articleInfo.time}}</text>
        <text class="page__desc"> 阅读{{articleInfo.view_num}}</text>
        <text class="page__desc"> 评论{{articleInfo.content_num}}</text>
    </view>
    <view class="page__bd">
        <view class="weui-article">
            <view class="weui-article__section">
                <view class="weui-article__title"></view>
                <view class="weui-article__section">
                    <view class="weui-article__h3">{{articleInfo.topic}}</view>
                    <block wx:for="{{articleInfo.contents}}" wx:for-item="content">
                        <block wx:if="{{content.text}}">
                            <view class="weui-article__p">{{content.text}}</view>
                        </block>
                        <block wx:if="{{content.img}}">
                            <view class="weui-article__p">
                                <image class="weui-article__img" src="{{content.img}}" mode="aspectFit" style="height: 180px" />
                            </view>
                        </block>
                    </block>
                </view>
            </view>
        </view>
    </view>
</view>
