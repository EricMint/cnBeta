<!--index.wxml-->
<view class="container">
  <view class="topic-main">
      <block wx:for="{{newsList}}" wx:key="title">
        <view class="topic-item" index="{{index}}" data-id="{{item.id}}" catchtap="goToArticleDetail">
            <image class="member-avatar" src="{{item.img}}" background-size="cover"></image>
            <view class="topic-info">
                <view class="topic-inner">
                    <view class="topic-left">
                        <view class="topic-title"><text>{{item.title}}</text></view>
                        <view >
                            <text class="node-name">{{item.classify}}</text>
                            <text class="member-nickname">{{item.time}}</text>
                        </view>
                    </view>
                    <view class="reply-num">{{item.view_num}}阅</view>
                    <view class="reply-num">{{item.comments}}评</view>
                </view>
            </view>
        </view>
      </block>
  </view>

  <loading hidden="{{!emptyList}}">
    加载中...
  </loading>
</view>
